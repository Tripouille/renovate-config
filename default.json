{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base", "schedule:nonOfficeHours"],
    "timezone": "Europe/Paris",
    "automerge": true,
    "prHourlyLimit": 5,
    "prConcurrentLimit": 5,
    "stabilityDays": 7,
    "prCreation": "not-pending",
    "labels": ["dependencies"],

    "major": {
        "dependencyDashboardApproval": true,
        "addLabels": ["major"],
        "automerge": false
    }
}
