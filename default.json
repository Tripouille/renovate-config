{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "schedule:nonOfficeHours"],
  "timezone": "Europe/Paris",
  "automerge": true,
  "prHourlyLimit": 5,
  "prConcurrentLimit": 5,
  "stabilityDays": 1,
  "prCreation": "immediate",
  "labels": ["dependencies"],

  "major": {
    "addLabels": ["major"],
    "automerge": false
  }
}
